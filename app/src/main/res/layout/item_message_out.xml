<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="4dp"
    android:gravity="end">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="@drawable/message_out_background"
        android:padding="12dp"
        android:maxWidth="80%p">

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textIsSelectable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:paddingStart="4dp">

            <TextView
                android:id="@+id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textColor="#80FFFFFF"
                android:textSize="11sp"
                android:includeFontPadding="false" />

            <ProgressBar
                android:id="@+id/messageProgress"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:indeterminateTint="#80FFFFFF"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/messageStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_check"
                android:tint="#80FFFFFF"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/messageStatusRead"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_double_check"
                android:tint="#80FFFFFF"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
