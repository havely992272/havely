<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <!-- Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/app_surface"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Назад"
            android:tint="@color/app_text_primary" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Профиль"
            android:textColor="@color/app_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Edit Button -->
        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:contentDescription="Редактировать"
            android:tint="@color/app_text_primary" />

    </LinearLayout>

    <!-- Profile Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Avatar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/app_surface"
                android:padding="24dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <!-- Avatar -->
                <ImageView
                    android:id="@+id/profileAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_person_large"
                    android:background="@drawable/avatar_large_background"
                    android:padding="24dp"
                    android:tint="@color/white" />

            </LinearLayout>

            <!-- Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/app_surface"
                android:layout_marginBottom="8dp">

                <!-- Display Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Имя"
                        android:textColor="@color/app_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/profileDisplayName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Ваше отображаемое имя"
                        android:textColor="@color/app_text_primary"
                        android:textColorHint="@color/app_text_secondary"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:enabled="false" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_background"
                    android:layout_marginStart="16dp" />

                <!-- Username -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Имя пользователя"
                        android:textColor="@color/app_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/profileUsernameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="@username"
                        android:textColor="@color/app_text_primary"
                        android:textColorHint="@color/app_text_secondary"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:inputType="text"
                        android:maxLength="12"
                        android:textSize="16sp"
                        android:enabled="false" />

                    <TextView
                        android:id="@+id/usernameCounter"
                        android:layout_width="match_content"
                        android:layout_height="wrap_content"
                        android:text="От 4 до 12 символов"
                        android:textColor="@color/app_text_secondary"
                        android:textSize="12sp"
                        android:gravity="start"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_background"
                    android:layout_marginStart="16dp" />

                <!-- Bio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="О себе"
                        android:textColor="@color/app_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/profileBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Добавьте информацию о себе"
                        android:textColor="@color/app_text_primary"
                        android:textColorHint="@color/app_text_secondary"
                        android:background="@android:color/transparent"
                        android:maxLines="3"
                        android:inputType="textMultiLine"
                        android:maxLength="70"
                        android:textSize="16sp"
                        android:enabled="false" />

                    <TextView
                        android:id="@+id/bioCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/70"
                        android:textColor="@color/app_text_secondary"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
